<form method="POST" action="/authenticate" class="container">
    {{#if pageTitle}}<h2 class="title">{{pageTitle}}</h2>{{/if}}
    <div class="input-row">
        <label for="name">Full Name</label>
        <input type="text" name="name" id="name" class="text-input" placeholder="Name" required>
    </div>
    <div class="input-row">
        <label for="username">Email</label>
        <input type="email" name="email" id="username" class="text-input" placeholder="Email" required>
    </div>
    <div class="input-row">
        <label for="Password">Password</label>
        <input type="password" name="password" id="password" class="text-input" placeholder="Password" required>
    </div>
    <div class="input-row">
        <label for="password-confirm">Confirm Password</label>
        <input type="password" id="password-confirm" class="text-input" placeholder="Password" required>
    </div>
    <div class="input-row">
        <input type="submit" value="Register" class="btn btn-primary" />
    </div>
    <div class="links">
        <a href="#">Login</a>
    </div>
</form>